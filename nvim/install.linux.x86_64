#!/usr/bin/env bash

NODEJS_VERSION=22.14.0

function nodejs() {
    echo "Installing node.js-${NODEJS_VER}" \
    && wget -nv -O /tmp/nodejs.tar.xz https://nodejs.org/dist/v${NODEJS_VER}/node-v${NODEJS_VER}-linux-x64.tar.xz \
    && tar -xf /tmp/nodejs.tar.xz -C /tmp/ \
    && sudo cp -r /tmp/node-v${NODEJS_VER}-linux-x64/* /usr/local/ \
    && sudo rm -rf /tmp/node-v${NODEJS_VER}-linux-x64 \
    && sudo rm -f /tmp/nodejs.tar.xz 
}

nodejs